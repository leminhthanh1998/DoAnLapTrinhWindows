<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LapTrinhWindows.Nhom3">
    
    <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type TextBox}" x:Key="StyleTextboxEmail">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0 5 0 5"/>
        <Setter Property="BorderBrush" Value="{StaticResource BlueBrush}"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
    </Style>

    <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type PasswordBox}" x:Key="StylePasswordBox">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0 5 0 5"/>
        <Setter Property="BorderBrush" Value="{StaticResource BlueBrush}"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
    </Style>
</ResourceDictionary>