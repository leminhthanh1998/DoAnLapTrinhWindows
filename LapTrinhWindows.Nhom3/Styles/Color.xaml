<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LapTrinhWindows.Nhom3">
    <Color x:Key="ColorBlue">#3099c5</Color>
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource ColorBlue}"/>

    <Color x:Key="ColorOrange">#ffa800</Color>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource ColorOrange}"/>

    <Color x:Key="ColorRed">#ff4747</Color>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource ColorRed}"/>

    <Color x:Key="ColorGreen">#00c541</Color>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource ColorGreen}"/>

    <Color x:Key="ForegroundLight">#ffffff</Color>
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLight}"></SolidColorBrush>

    <Color x:Key="ForegroundDark">#bdbdbd</Color>
    <SolidColorBrush x:Key="ForegroundDarkBrush" Color="{StaticResource ForegroundDark}"></SolidColorBrush>
</ResourceDictionary>